
/* CONSTANTS */

stroke = 0.1em
fullwidth = 1em
half = 0.5em
center = translatex(half - stroke/2)
dia = 1.3em
diafix = translatey(0.5em - dia /2)

curve = cubic-bezier(0.68, -0.55, 0.27, 1.55)

/* FUNCTIONS */

full(borders)
  fullwidth - stroke*borders

per(percent = unit(em), borders = 0)
  percent/100 - stroke*borders

move(x, y = x)
  translate(per(x), per(y))

arrow(awidth, aheight = awidth/1.5)
  width 0
  height 0
  background transparent
  border-left per(awidth/2) solid transparent
  border-right per(awidth/2) solid transparent
  border-bottom-color transparent
  border-top-width per(aheight)

line(llength = 100, lstroke = 10)
  border-top-width per(lstroke)
  width per(llength)

edge(ewidth = 100, eheight = ewidth, estroke = 10, radius = 0)
  border-top-width per(estroke)
  border-left-width per(estroke)
  border-bottom-color transparent
  border-right-color transparent
  width per(ewidth, 1)
  height per(eheight, 1)
  border-radius per(radius) 0 0 0


circle(cwidth = 100, cheight = cwidth, cstroke = 10)
  width per(cwidth, 2)
  height per(cheight, 2)
  border-radius 50%
  border-width per(cstroke)

dot(cwidth = 100, cheight = cwidth)
  width 0
  height 0
  border-radius 50%
  border-width per(cheight/2) per(cwidth/2)

box(bwidth = 100, radius = 10, bheight = bwidth)
  width per(bwidth, 2)
  height per(bheight, 2)
  border-radius per(radius)
  border-width stroke

block(bwidth = 100, bheight = bwidth, radius1 = 10, radius2 = radius1, radius3 = radius1, radius4 = radius2)
  width 0
  height 0
  border-width per(bheight/2) per(bwidth/2)
  border-radius per(radius1) per(radius2) per(radius3) per(radius4)

copy(x = 0, y = 0, size=0)
  per(x) per(y) 0 per(size) currentColor


/* PRESETS */

.Icon
  display inline-block
  width 1em
  height 1em
  margin 0.3em 
  postition relative


  &::before, &::after
    content '' 
    position absolute
    display inline-block
    //background currentColor
    border-color currentColor
    border-style solid
    border-width 0
    transition transform 0.5s curve, 
               width 0.5s curve, 
               height 0.5s curve, 
               box-shadow 0.5s curve, 
               border-width 0.5s curve //cubic-bezier(1, 0.01, 1,-0.13)



/* CONSTANTS */

stroke = 0.1em
fullwidth = 1em
half = 0.5em
center = translatex(half - stroke/2)
dia = 1.3em
diafix = translatey(0.5em - dia /2)

curve = cubic-bezier(0.68, -0.55, 0.27, 1.55)

/* FUNCTIONS */

full(borders)
  fullwidth - stroke*borders

per(percent = unit(em), borders = 0)
  percent/100 - stroke*borders

arrow(awidth, aheight = awidth/1.5)
  width 0
  height 0
  background transparent
  border-left per(awidth/2) solid transparent
  border-right per(awidth/2) solid transparent
  border-top-width per(aheight)

line(llength = 100, lstroke = 10)
  border-top-width per(lstroke)
  width per(llength)

circle(cwidth = 100, cheight = cwidth, cstroke = 8)
  width per(cwidth, 2)
  height per(cheight, 2)
  border-radius 50%
  border-width cstroke

dot(cwidth = 100, cheight = cwidth)
  width 0
  height 0
  border-radius 50%
  border-width per(cheight/2) per(cwidth/2)

box(bwidth = 100, radius = 10, bheight = bwidth)
  width per(bwidth, 2)
  height per(bheight, 2)
  border-radius per(radius)
  border-width stroke

block(bwidth = 100, bheight = bwidth, radius1 = 10, radius2 = radius1, radius3 = radius1, radius4 = radius2)
  width 0
  height 0
  border-width per(bheight/2) per(bwidth/2)
  border-radius per(radius1) per(radius2) per(radius3) per(radius4)

copy(x = 0, y = 0, size)
  per(x) per(y) 0 per(size) currentColor


/* PRESETS */

.Icon
  display inline-block
  width 1em
  height 1em
  margin 0.3em 
  postition relative


  &::before, &::after
    content '' 
    position absolute
    display inline-block
    //background currentColor
    border-color currentColor
    border-style solid
    border-width 0
    transition transform 0.5s curve, width 0.5s curve, height 0.5s curve, box-shadow 0.5s curve, border 0.5s curve //cubic-bezier(1, 0.01, 1,-0.13)

/* ICONS */

  &.Cross
    &::before
      line()
      transform translatey(0.45em) rotate(45deg)
        
    &::after
      line()
      transform translatey(0.45em) rotate(-45deg)
  
  &.Checkmark
    &::before
      line()
      transform translate(0.1em, 0.45em) rotate(-50deg)
        
    &::after
      line(40)
      transform translatey(0.7em) rotate(40deg)
    
  &.Plus
    &::before
      line(80)
      transform translate(0.1em, 0.45em)

    &::after
      line(80)
      transform translate(0.1em, 0.45em) rotate(90deg)
  
  &.Minus
    &::before
      line(80)
      transform translate(0.1em, 0.45em)

    &::after
      line(80)
      transform translate(0.1em, 0.45em)

  &.Window
    &::before
      box()

    &::after
      line(80, 20)
      transform translate(0.1em, 0.1em)

  &.Facebook
    &::before
      width 0.2em
      border-left-width stroke*2
      border-top-width stroke*2
      background none
      border-radius 0.3em 0 0 0
      height full(2)
      transform center 

    &::after
      line(50, 20)
      transform translate(0.3em,  0.35em) //rotate(90deg)

  &.Instagram
    &::before
      box(100, 20)

    &::after
      dot(40)
      box-shadow: 0.25em -0.25em 0px -0.12em currentColor
      transform translate(0.28em,  0.32em)
  
  &.Youtube
    &::before
      box(100, 15, 70)
      transform translatey(0.15em) 

    &::after
      width stroke
      arrow(35)
      transform translate(0.35em, 0.4em) rotate(-90deg)
  
   &.Link
    &::before
      box(67, 20, 42)
      transform translatey( 0.4em) rotate(-50deg)

    &::after
      box(67, 20, 42)
      transform translate(0.35em, 0.2em) rotate(-50deg) 
    
   &.Menu
    &::before
      line(80)
      transform translate(0.1em, 0.15em)

    &::after
      line(80)
      transform translate(0.1em, 0.75em)
      box-shadow 0 -0.3em  0px 0em currentColor
    
  &.Home
    &::before
      width 0.6em
      height 0.4em 
      box(80, 15, 60)
      transform translate(0.1em, 0.4em) 
       

    &::after
      arrow(80, 50)
      transform translate(0.1em, 0em) rotate(180deg)
      box-shadow 0em -0.5em 0 -0.2em currentColor
    
  
  &.Mail
    &::before
      width 1em - 2*stroke
      height 0.8em - 2 * stroke
      border-radius stroke*1.5
      background none
      border-width stroke
      transform translate(0em, 0.1em) 
       

    &::after
      arrow(100, 40)
      transform translate(0em, 0.2em)
      z-index -1

  &.Pencil
    &::before
      box(95, 10, 30)
      transform translate(-0.1em, 0.28em) rotate(40deg)

    &::after
      width stroke
      arrow(25, 30)
      transform translate(0.77em, 0.72em) rotate(-50deg)
    
  &.Globe
    &::before   
      circle()

    &::after
      width stroke
      height 0.6em
      width 0.4em
      dot(40, 60)
      box-shadow copy(-25,-10,-10),
                 copy(-10,-10,-10),
                 copy(10,-10,-10),
                 copy(-20,-42,-17), 
                 copy(-55,-20,-12), 
                 copy(-45,25,-16), 
                 copy(-7,25,-16)

      transform translate(0.48em,  0.32em) rotate(20deg)
      z-index -1

  &.Github
    &::before
      width full(2)
      height 0.6em
      box(100, 0, 0)
      border-radius 45%
      background none
      border-width per(8)
      box-shadow inset 0 0.1em 0 0.03em currentColor 

    &::after
      block(35, 25, 15,15,0,0)
      transform translate(0.325em, 0.75em) 
      box-shadow copy(-18, -46, -7), 
                 copy(18, -46, - 7), 
                 copy(26, -83, - 7), 
                 copy(-26, -83, -7),
                 copy(0, -30, -11)
        
  &.Heart
     &::before
      block(60, 85, 30,30,0,0)
      transform translate(0.1em) rotate(-45deg)

     &::after
      block(60, 85, 30,30,0,0)
      transform translatex(0.3em) rotate(45deg)
  
  &.Thumb
     &::before
      block(25, 45, 10,30,0,0)
      transform translate(0.3em) //rotate(-45deg)
      box-shadow copy(-10, 40, 7)

     &::after
      block(42, 15,0 , 30,30,0)
      transform translate(0.45em, 0.35em)
      box-shadow copy(3, 13, 1),
                 copy(2, 26, 1),
                 copy(0, 41, 1)

      
